{
  "name": "bastion-siege-assist-bot",
  "private": true,
  "version": "5.2.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdJoPaTo/BastionSiegeAssistBot.git"
  },
  "bugs": {
    "url": "https://github.com/EdJoPaTo/BastionSiegeAssistBot/issues"
  },
  "homepage": "https://github.com/EdJoPaTo/BastionSiegeAssistBot#readme",
  "main": "source",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "del dist && tsc",
    "prepack": "npm run build",
    "start": "ts-node source/index.ts",
    "test": "tsc && xo && nyc ava"
  },
  "dependencies": {
    "@edjopato/datastore": "^0.1.0",
    "angle-distance": "^1.0.0",
    "array-filter-unique": "^2.1.0",
    "array-reduce-group-by": "^1.0.0",
    "bastion-siege-logic": "^2.4.0",
    "d3": "^5.9.2",
    "d3-node": "^2.1.0",
    "debounce-promise": "^3.1.0",
    "emoji-tree": "^1.1.2",
    "full-icu": "^1.3.0",
    "fuzzysort": "^1.1.4",
    "json-stable-stringify": "^1.0.1",
    "locale-emoji": "^0.3.0",
    "moonmoji": "^1.1.10",
    "sharp": "^0.23.0",
    "source-map-support": "^0.5.13",
    "telegraf": "^3.28.0",
    "telegraf-i18n": "^6.5.0",
    "telegraf-inline-menu": "^4.0.0",
    "telegraf-session-local": "^1.0.2",
    "telegram-format": "^1.1.0",
    "timezone-support": "^2.0.2"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.6.0",
    "@types/d3": "^5.7.2",
    "@types/debounce-promise": "^3.1.1",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "^12.7.1",
    "@types/sharp": "^0.23.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "ava": "^2.0.0",
    "del-cli": "^3.0.0",
    "eslint-config-xo-typescript": "^0.22.0",
    "nyc": "^14.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "xo": "^0.25.3"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "dist/source",
      "source"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "extends": "xo-typescript",
    "extensions": [
      "ts"
    ],
    "rules": {
      "ava/no-ignored-test-files": "off",
      "prefer-named-capture-group": "off",
      "@typescript-eslint/array-type": "off",
      "@typescript-eslint/no-untyped-public-signature": "off",
      "@typescript-eslint/restrict-template-expressions": "warn",
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/semi": [
        "error",
        "never"
      ]
    },
    "overrides": [
      {
        "files": [
          "source/lib/types/failed-bs-message.*",
          "source/lib/types/session.*",
          "source/parts/inline-query.*"
        ],
        "rules": {
          "@typescript-eslint/camelcase": "off",
          "camelcase": "off"
        }
      }
    ]
  }
}
